            <td>
                @Html.DisplayFor(modelItem => item.JSNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JSApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JSEnfermedad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JSDNI)
            </td>
