@model IEnumerable<JulianaSosaGestorPacientesWeb.Models.JSPaciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JSNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JSApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JSEnfermedad)
