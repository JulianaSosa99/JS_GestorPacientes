@model JulianaSosaGestorPacientesWeb.Models.JSCategoria

@{
    ViewData["Title"] = "JS_Editar";
}

<h1>JS_Editar</h1>

<h4>JSCategoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="JSEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JSCategoriaID" />
            <div class="form-group">
                <label asp-for="JSGravedad" class="control-label"></label>
                <input asp-for="JSGravedad" class="form-control" />
                <span asp-validation-for="JSGravedad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JSFechaIngreso" class="control-label"></label>
                <input asp-for="JSFechaIngreso" class="form-control" />
                <span asp-validation-for="JSFechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JSPacienteID" class="control-label"></label>
                <select asp-for="JSPacienteID" class="form-control" asp-items="ViewBag.JSPacienteID"></select>
                <span asp-validation-for="JSPacienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
