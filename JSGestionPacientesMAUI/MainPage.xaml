<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JSGestionPacientesMAUI.MainPage">

    <Grid>
        <StackLayout>
            <Label Text="Lista de Pacientes" HorizontalOptions="Center" VerticalOptions="Start"/>
            <Button Text="Listar Pacientes" Clicked="Pacientes" HorizontalOptions="Center"/>
            
            
            <ListView x:Name="listView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding jsNombre}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
                      
           
            
        </StackLayout>
    </Grid>

</ContentPage>
